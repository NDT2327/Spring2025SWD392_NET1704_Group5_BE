<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].BookingStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].PaymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].Notes)
