@page
@model CCSystem.Presentation.Pages.Authentications.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/CCSystem.Presentation.styles.css" asp-append-version="true" />
</head>
<body class="d-flex align-items-center justify-content-center vh-100 bg-light">

    <div class="p-4 bg-white shadow rounded" style="width: 380px;">
        <h2 class="text-center mb-4">Register</h2>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info text-center">@Model.Message</div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" asp-for="AccountRegisterRequest.Email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" asp-for="AccountRegisterRequest.Password" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" asp-for="AccountRegisterRequest.FullName" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Address</label>
                <input type="text" asp-for="AccountRegisterRequest.Address" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Phone Number</label>
                <input type="text" asp-for="AccountRegisterRequest.Phone" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>

        <div class="text-center mt-3">
            <a class="text-decoration-none text-primary" asp-page="/Authentications/Login">Already have an account? Login</a>
        </div>
    </div>

</body>
</html>
