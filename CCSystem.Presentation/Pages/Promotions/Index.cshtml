@page
@model CCSystem.Presentation.Pages.Promotions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Promotion[0].DiscountAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Promotion[0].DiscountPercent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Promotion[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Promotion[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Promotion[0].MinOrderAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Promotion[0].MaxDiscountAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Promotion[0].CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Promotion) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinOrderAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxDiscountAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Code">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Code">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Code">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
