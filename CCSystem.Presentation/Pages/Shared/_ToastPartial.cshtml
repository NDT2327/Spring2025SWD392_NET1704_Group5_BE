@if (TempData["ToastMessage"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1050;">
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="@(TempData["ToastDuration"] ?? 5000)">
            <div class="toast-header">
                <strong class="me-auto">@(TempData["ToastTitle"] ?? "Notification")</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body @TempData["ToastType"]">
                @TempData["ToastMessage"]
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('.toast').toast('show');
        });
    </script>
}
