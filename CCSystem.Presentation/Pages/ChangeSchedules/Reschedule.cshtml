@page "{id:int}"
@model CCSystem.Presentation.Pages.ChangeSchedules.RescheduleModel
@{
    ViewData["Title"] = "Reschedule Booking";
}

<h2>Reschedule Booking</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Current Date:</label>
        <input type="date" class="form-control" value="@Model.BookingDetail.ScheduleDate" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Current Time:</label>
        <input type="time" class="form-control" value="@Model.BookingDetail.ScheduleTime" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">New Date:</label>
        <input type="date" asp-for="NewDate" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">New Time:</label>
        <input type="time" asp-for="NewTime" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Confirm Reschedule</button>
</form>
